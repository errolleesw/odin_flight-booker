<p style="color: green"><%= notice %></p>
<h1>Airports</h1>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Airport Code</th>
      <th>Airport Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @airports.each do |airport| %>
      <tr>
        <td><%= airport.id %></td>
        <td><%= airport.code %></td>
        <td><%= airport.name %></td>
        <td><%= link_to 'Show', airport %></td>
        <td><%= link_to 'Edit', edit_airport_path(airport) %></td>
        <td><%= link_to 'Delete', airport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <%= link_to "New airport", new_airport_path %>
